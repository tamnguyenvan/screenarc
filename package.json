{
  "name": "screenarc",
  "description": "Screen recording and editing app",
  "author": "Tam Nguyen",
  "private": true,
  "version": "1.0.81",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf dist dist-electron build",
    "build": "npm run clean && tsc && vite build",
    "dist": "tsc && npm run build && electron-builder",
    "dist:appimage": "tsc && npm run build && electron-builder build -l AppImage",
    "dist:flatpak": "tsc && npm run build && electron-builder build -l flatpak",
    "dist:deb": "tsc && npm run build && electron-builder build -l deb",
    "dist:rpm": "tsc && npm run build && electron-builder build -l rpm",
    "dist:zip": "tsc && npm run build && electron-builder build -l zip",
    "dist:linux": "tsc && npm run build && electron-builder --linux",
    "dist:win": "tsc && npm run build && electron-builder --win",
    "publish-linux-app": "tsc && npm run build && electron-builder -l --publish always",
    "publish-win-app": "tsc && npm run build && electron-builder -w --publish always",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.3",
    "electron-store": "^10.1.0",
    "immer": "^10.1.3",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "zundo": "^2.0.0-beta.24",
    "zustand": "^4.3.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.2.9",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@rollup/plugin-commonjs": "^26.0.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-node-polyfills": "^0.24.0"
  },
  "optionalDependencies": {
    "global-mouse-events": "github:tamnguyenvan/global-mouse-events",
    "winreg": "^1.2.4",
    "x11": "github:tamnguyenvan/node-x11",
    "ffi-rs": "^1.3.0"
  },
  "main": "dist-electron/index.js",
  "build": {
    "appId": "com.screenarc.app",
    "productName": "ScreenArc",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "binaries/**/*",
      "!dist/*.{AppImage,yml,yaml,exe,dmg,zip}",
      "!dist/*-unpacked/"
    ],
    "asarUnpack": [
      "binaries/**"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/screenarc-appicon.ico",
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/screenarc-appicon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/screenarc-appicon.png",
      "category": "Utility",
      "artifactName": "ScreenArc-${version}-linux-x64.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "public"
    }
  },
  "publish": [
    {
      "provider": "github",
      "owner": "tamnguyenvan",
      "repo": "screenarc",
      "draft": false,
      "releaseType": "release"
    }
  ]
}
